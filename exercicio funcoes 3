#include <stdio.h>
#include <math.h>

int arredonda (float x){
    if (x>0) {
        return (int)(x + 0.5);
    } else {
        return (int)(x - 0.5);
    }
 }
 int main () {
    float num;

    printf ("Digite um numero: ");
    scanf ("%f", &num);

    int resultado = arredonda (num);

    printf ("Numero arredondado: %d\n", resultado);

    return 0;
}
